{
  "name": "tuture",
  "version": "0.3.1",
  "preferGlobal": true,
  "description": "Tuture magically turns your repositories into juicy tutorials.",
  "license": "MIT",
  "main": "bin/tuture-server",
  "keywords": [
    "tutorial",
    "step-by-step",
    "learn-by-doing",
    "git"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tutureproject/tuture.git"
  },
  "bugs": {
    "url": "https://github.com/tutureproject/tuture/issues"
  },
  "homepage": "https://github.com/tutureproject/tuture#readme",
  "bin": {
    "tuture-server": "bin/tuture-server"
  },
  "files": [
    "/bin",
    "/dist"
  ],
  "scripts": {
    "prestart": "rimraf dist",
    "prestart:cn": "rimraf dist",
    "start": "TUTURE_PATH=example/en NODE_ENV=development webpack -w",
    "start:cn": "TUTURE_PATH=example/cn NODE_ENV=development webpack -w",
    "build": "webpack --mode=production",
    "test": "jest",
    "lint": "tslint 'src/**/*.{ts,tsx,js}' --project tsconfig.json",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "express": "^4.16.3",
    "highlight.js": "^9.12.0",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.10",
    "marked": "^0.4.0",
    "morgan": "^1.9.0",
    "multer": "^1.3.1",
    "opn": "^5.3.0",
    "react": "^16.3.2",
    "react-beautiful-dnd": "^8.0.7",
    "react-dom": "^16.3.2",
    "react-markdown": "^3.3.4",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "styled-components": "^3.3.2"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.4",
    "@types/enzyme": "^3.1.10",
    "@types/express": "^4.16.0",
    "@types/highlight.js": "^9.12.3",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^23.1.0",
    "@types/js-yaml": "^3.11.2",
    "@types/lodash": "^4.14.116",
    "@types/marked": "^0.4.0",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/opn": "^5.1.0",
    "@types/react": "^16.3.17",
    "@types/react-beautiful-dnd": "^7.1.1",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.6",
    "@types/react-test-renderer": "^16.0.1",
    "@types/socket.io": "^1.4.36",
    "@types/socket.io-client": "^1.4.32",
    "cross-spawn": "^6.0.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.13.6",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.1.0",
    "webpack-shell-plugin": "^0.5.0"
  },
  "lint-staged": {
    "./**/*.{ts,tsx,js,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "delay": "400"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg)$": "<rootDir>/src/components/tests/config/empty-module.js"
    },
    "setupFiles": [
      "./src/components/tests/config/env.js"
    ],
    "setupTestFrameworkScriptFile": "./src/components/tests/config/enzyme-adapter.js"
  }
}
